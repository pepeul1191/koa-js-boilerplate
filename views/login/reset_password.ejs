<%- include('../partials/blank_header.ejs') %>

<form class="form-signin" action="<%= constants.base_url %>login" method="post">
  <a href="<%= constants.base_url %>">
    <img src="<%= constants.static_url %>assets/img/logo.png" height="130" width="240" class="mb-4 brand" alt="Logo-Login">
  </a>
  <h1 class="h3 mb-3 font-weight-normal"><%= contents.form_title_reset %></h1>
  <input type="hidden" name="<%= constants.csrf.key %>" value="<%= constants.csrf.secret %>">
  <span class="extraData"></span>
  <!--EMAIL -->
  <label for="email" class="sr-only">Email address</label>
  <input type="text" id="email" class="form-control" placeholder="<%= contents.placeholder_email %>" required="" autofocus="" name="email">
  <!--MESSAGE-->
  <p class="color-error message" style="margin-top:10px;" id="login-message"><%= message %></p>
  <!--BUTTON -->
  <button class="btn btn-lg btn-primary btn-block" type="submit">
    <%= contents.button_reset %>
  </button>
  <!--FooTER LOGIN NAV -->
  <div class="link-login">
    <a id="" class="" href="<%= constants.base_url %>login">
      <%= contents.login %>
    </a>
    <a class="pull-right" href="<%= constants.base_url %>login/sign_in">
      <%= contents.sign_in %>
    </a>
  </div>
  <p class="mt-5 mb-3 text-muted">Powered By <a href="http://softweb.pe/"> Softtware Web Perú</a> © 2017-2018</p>
</form>


<%- include('../partials/blank_footer.ejs') %>